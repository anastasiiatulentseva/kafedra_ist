.modal-content
  .modal-header
    %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
      %span{"aria-hidden" => "true"} Ã—
    %h4#contact_user.modal-title
      Send message to
      = @recipient.name
  .modal-body
    = form_tag({ controller: 'mailers', action: 'send_email_to_user' },
             method: 'post', id: 'contact_user') do
      = hidden_field_tag 'recipient_id', @recipient.id
      .form-group
        = text_field_tag 'subject',
              nil,
              class: "form-control", placeholder: "Subject", type: "text"
      .form-group
        = text_area_tag 'text', nil, placeholder: "Message text",
              class: "form-control", rows: 7
      .text-center
        .btn-group
          = submit_tag "Send", class: "btn btn-primary"
          %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
  .modal-footer
    %span.help-block.small
      You'll get response to the email address you have provided in your profile
