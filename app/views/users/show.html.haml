- provide(:title, @user.name)
%h2.page-header
  = @user.name
  's page is here
.pull-right
  = link_to 'Edit profile', edit_user_registration_path
  - if @user.teacher?
    |
    = link_to 'Set subjects', set_subjects_user_path
.container
  .row
    .col-md-4.col-md-offset-1
      %ul.list-unstyled
        %li
          %h3= @user.name
        %li
          Email: #{@user.email}
        %li
          You are here since: #{@user.created_at.strftime('%F')}
        - if @user.student?
          %li
            Specialty:
            = @user.student_profile.specialty.name
          %li
            Group
            = @user.student_profile.group
    .col-md-3.col-md-offset-2
      %span
        %strong Current user picture:
      %img.img-circle{:src => "#{@user.picture}"}
