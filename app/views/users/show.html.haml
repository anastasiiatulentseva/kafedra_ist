- provide(:title, @user.name)
%h2
  = @user.name
  's page is here
.container
  .row
    .col-md-3
      %span
        %strong Current user picture:
      %img.img-circle{:src => "#{@user.picture}"}/
    .col-md-4.col-md-offset-1
      %ul.list-unstyled
        %li
          %h3= @user.name
        %li
          Email: #{@user.email}
        %li
          You are here since: #{@user.created_at.strftime('%F')}
  = link_to 'Edit profile', edit_user_registration_path


