%td= user.name
%td= user.email
%td
  - if user.confirmed_at?
    Yes
  - else
    No
%td
  =form_for(user, remote: true) do |f|
    .form-group-sm
      = f.collection_select(:roles,
                            User::ROLES,
                            :to_s,
                            lambda{|i| i.to_s.humanize},
                            {},
                            multiple: true, class: "form-control input-sm select-state")
%td= user.email


