.ban_button
  - if user.banned_at?
    = link_to t('unban'), unban_user_path(user), method: :post, data: { confirm: t('unban_user') }, class: "btn btn-default", remote: true
  - else
    = link_to t('ban'), ban_user_path(user), method: :post, data: { confirm: t('ban_user') }, class: "btn btn-warning", remote: true
