- provide(:title, t('contacts'))
%h1.page-header=t('addresses')
.row
  .col-md-7
    %iframe{src:"https://api-maps.yandex.ru/frame/v1/-/CVXljJzN", class: "embed-responsive-item", width:"530", height:"400", frameborder:"0"}
  .col-md-4
    %p
      h2 { font-size: 1.2em; letter-spacing: -1px; margin-bottom: 30px; text-align: center; font-weight: normal; color: $gray-light; } p { font-size: 1.1em; line-height: 1.7em; } /* header */ #logo { float: left; margin-right: 10px; font-size: 1.7em; color: #fff; text-transform: uppercase; letter-spacing: -1px; padding-top: 9px; font-weight: bold; &:hover { color:#fff; text-decoration: none; } } /* footer */ footer { margin-top: 45px; padding-top:5px; border-top: 1px solid $gray-medium-light; color: $gray-light; a { color: $gray; &:hover { color: $gray-darker; } } small { float: left; } ul { float: right; list-style: none; li { float: left; margin-left: 15px; }
