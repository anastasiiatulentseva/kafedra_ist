- provide(:title, t('all_workbooks'))
%h1.page-header
  = t('all_workbooks')

#workbook_index_for_admin
  .row
    .col-md-4
      %ul.nav.nav-pills.nav-stacked
        %li{class: params[:subject].blank? && 'active' }
          = link_to t('special'), special_workbooks_path
        - @subjects.each do |subject|
          %li{class: (params[:subject] == subject.id.to_s) && 'active' }
            = link_to special_workbooks_path(subject: subject.id) do
              = subject.name
              %span.badge
                = @workbook_counts[subject.id]
    .col-md-8
      .panel.panel-default
        .panel-heading
          = @panel_heading
        %ul.list-group
          = render @panel_workbooks
