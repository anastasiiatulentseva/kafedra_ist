<%= form_for(@article) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label :name, class: "control-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Enter artilcle name" %>
  </div>
  <div class="form-group">
    <%= f.label :text, class: "control-label" %>
    <%= f.text_area :text, class: "text-wysiwyg form-control", rows: 15 %>
  </div>
  <div class="form-group">
    <%= f.label :category, class: "control-label" %>
    <%= f.text_field :category, list: 'category', class: "form-control" %>
    <datalist id="category">
      <% Article.select(:category).distinct.each do |article| %>
        <option value="<%= article.category %>"></option>
      <% end %>
    </datalist>
    <span class="help-block">Choose from list or create new category</span>
  </div>
  <div class="form-group">
    <%= f.label :order, class: "control-label" %>
    <%= f.text_field :order, class: "form-control" %>
  </div>
  <div class="btn-group">
    <%= f.submit "Save", class: "btn btn-primary" %>
    <%= link_to "Delete", @article, method: :delete, data: { confirm: "Delete article?" }, class: "btn btn-danger"%>
  </div>
<% end %>
  